@model IEnumerable<Candidate>
@if (Model.Count() > 0)
{
    <h6 class="display-6">
    Applications
</h6>

    <table class="table table-hover table-strped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Course</th>

    <tbody>
        @foreach (var candidate in Model)
                    {
                <tr>
                    <td>@candidate.Email</td>
                    <td>@candidate.FullName</td>
                    <td>@candidate.ApplyAt</td>
                    <td>@candidate.SelectedCourse</td>
                </tr>
                    }
        </tbody>
        </tr>
        </thead>
    </table>
}
else
{
    <div class="alert alert-info">
    There is no application. Please click here to apply.
</div>
}
